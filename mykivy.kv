Screen_Manager:
    Screen_1:
        name: 'scr_1'
        MyFloat:
    Screen_2:
        name: 'scr_2'
        MyFloat2:
    Screen_3:
        name: 'scr_3'
        MyFloat3:
    Screen_4:
        name: 'scr_4'
        MyFloat4:





<MyFloat>:
    canvas.before:
        Color:
            rgba: (1, 1, 1, .8)
        Rectangle:
            source:'youtube.jpg'
            size: root.width, root.height
            pos: self.pos
    Label:
        text:'Enter YouTube Link ...'
        size_hint:.5,.09
        pos_hint:{'center_x':.5,'center_y':.45}
    TextInput:
        id: link
        multiline:False
        size_hint:.6,.09
        pos_hint:{'center_x':.5,'center_y':.33}
        disabled:False
    Button:
        canvas.before:
            Color:
                rgba: 1,1,.1,1
            Rectangle:
                size:self.size
                pos:self.pos
        background_color:0,0,0,0
        color: 0,0,0,
        font_size:30
        outline_width:.2
        bold:True
        id:check_btn
        text:'check'
        size_hint:.2,.1
        pos_hint:{'center_x':.5,'center_y':.2}
        on_press: app.root.check(link)



<MyFloat2>:
    id:flt
    canvas.before:
        Color:
            rgba:1, 0, 0,.5
        Rectangle:
            size: root.width, root.height
            pos: root.pos
    Label:
        canvas.before:
            Color:
                rgba:0, 0, 0,0
            Rectangle:
                size: self.size
                pos: self.pos
        id: pic_label
        size_hint:.3, .3
        size_hint_y: None
        text_size: self.width, None
        height: self.texture_size[1]
        text:'YouTube Downloador \n\n...shipll....'
        pos_hint: {'x':.04,'top':.8}
        halign:'center'

    BoxLayout:
        id: pic_box
        size_hint:.5 , .5
        pos_hint: {'center_x':.7,'top':.9}
        Image:
            id: pic
            source:'R.jpeg'
    Button:
        canvas.before:
            Color:
                rgba: 1,.1,.3,.5
            Rectangle:
                size:self.size
                pos:self.pos

        id:download_btn
        text:'download'
        background_color:0,0,0,0
        size_hint:.2,.1
        pos_hint:{'center_x':.7,'center_y':.2}
        on_press: app.root.download(self,spin,pic_label,flt,start,pic_box)
        disabled: True if spin.text == "RESOLUTION" else False
    Spinner:
        canvas.before:
            Color:
                rgba: 1,.1,.4,.7
            Rectangle:
                size:self.size
                pos:self.pos
        background_color:0,0,0,0
        id: spin
        text:"RESOLUTION"
        font_size: 23
        size_hint:.2,.1
        pos_hint:{'center_x':.3,'center_y':.2}
        values:['High quality','Low quality','Audio']

    Button:
        canvas.before:
            Color:
                rgba: .0,.1,.2,1
            Rectangle:
                size:self.size
                pos:self.pos
        id:start
        text:'START'
        font_size: 40
        background_color:0,0,0,0
        color: 0,1,0
        size_hint:.7,.25
        pos_hint:{'center_x':.5,'center_y':.2}
        on_press: app.root.start(self,flt,pic_label,pic_box,pic)


<PopWindows>:
    Label:
        text:"Try Again"


<MyFloat3>:
    id:flt3
    canvas.before:
        Color:
            rgba:1, 0, 0,.5
        Rectangle:
            size: root.width, root.height
            pos: root.pos
    Label:
        text:'download complete'
        size_hint:.3 , .4
        pos_hint: {'center_x':.5,'top':.9}
    Button:
        text: "Start Again"
        size_hint:.3 , .2
        pos_hint: {'center_x':.5,'top':.4}
        on_press:app.root.go_back()



